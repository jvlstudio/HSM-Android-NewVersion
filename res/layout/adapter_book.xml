<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="horizontal"
    tools:context="br.com.ikomm.apps.HSM.LivrosAdapter$PlaceholderFragment">

    <ImageView 
        android:id="@+id/imgBook"
        android:layout_width="100dp"
        android:layout_height="120dp"
        android:src="@drawable/hsm_placeholder_book"/>
    
    <LinearLayout 
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:layout_marginLeft="10dp"
        android:orientation="vertical">
        
        <TextView 
            android:id="@+id/txtNameBook"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textColor="#ababc7"
            android:textSize="14dp"
            android:text="Nome do Livro"/>
        
        <TextView 
            android:id="@+id/txtDescBook"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#ababc7"
            android:textSize="10dp"
            android:text="Edição do Livro"/>
    </LinearLayout>

</LinearLayout>
