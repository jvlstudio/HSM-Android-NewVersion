<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp"
    android:orientation="horizontal" >

    <ImageView 
        android:id="@+id/id_book_image_view"
        android:layout_width="100dp"
        android:layout_height="120dp"
        android:src="@drawable/hsm_placeholder_book"/>
    
    <LinearLayout 
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:layout_marginLeft="10dp"
        android:orientation="vertical">
        
        <TextView 
            android:id="@+id/id_book_title_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textColor="@color/hsm_color_gray_light"
            android:textSize="14dp"
            android:text="@string/adapter_book_name" />
        
        <TextView 
            android:id="@+id/id_author_name_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/hsm_color_gray_light"
            android:textSize="10dp"
            android:text="@string/adapter_author_name" />
    </LinearLayout>
</LinearLayout>