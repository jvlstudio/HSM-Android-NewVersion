<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="@color/hsm_color_gray_normal"
    android:padding="10dp" >

    <!-- Time and Hour -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:orientation="vertical" >
        <ImageView
            android:id="@+id/id_lecture_status_image_view"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="center_horizontal" />
        <TextView
            android:id="@+id/id_start_time_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:maxLines="1"
            android:text="11h00"
            android:textColor="@color/hsm_color_gray_light" />
        <TextView
            android:id="@+id/id_end_time_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:maxLines="1"
            android:text="12h00"
            android:textColor="@color/hsm_color_gray_light" />
    </LinearLayout>

    <!-- Panelist Image -->
    <ImageView
        android:id="@+id/id_panelist_image_view"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginLeft="25dp"
        android:src="@drawable/hsm_placeholder_panelist" />
    
    <!-- Name and Type -->
	<LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="25dp"
        android:orientation="horizontal" >
    
	    <LinearLayout
	        android:layout_width="@dimen/adapter_agenda_width"
	        android:layout_height="wrap_content"
	        android:layout_gravity="center"
	        android:orientation="vertical" >
		    <TextView
		        android:id="@+id/id_panelist_name_text_view"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:text="Nome do Palestrante"
		        android:textColor="@color/hsm_color_gray_light" />
		    <TextView
		        android:id="@+id/id_lecture_type_text_view"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:text="Tipo de Palestra"
		        android:drawablePadding="5dp"
		        android:drawableLeft="@drawable/ic_hsm_microfone"
		        android:textColor="@color/hsm_color_gray" />
		</LinearLayout>
	
	    <!-- Plus Button -->
	    <ImageView
	        android:layout_width="30dp"
	        android:layout_height="30dp"
	        android:layout_marginLeft="25dp"
	        android:layout_gravity="center"
	        android:src="@drawable/hsm_id_plus2" />
	</LinearLayout>
</LinearLayout>