<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_margin="5dp"
    android:padding="5dp" >
    
    <!-- Image and Titles -->
    <LinearLayout
        android:id="@+id/id_panelist_layout_eventos_adapter_item"
        android:layout_width="match_parent"
    	android:layout_height="124dp"
    	android:layout_marginRight="5dp"
    	android:orientation="horizontal"
    	android:src="@drawable/hsm_placeholder_big"
    	android:background="@drawable/event_item_background" >
        
		<ImageView
		    android:id="@+id/id_panelist_image_eventos_adapter_item"
	        android:layout_width="124dp"
	        android:layout_height="124dp"
	        android:visibility="invisible" />
	    
	    <LinearLayout
	        android:layout_width="match_parent"
	    	android:layout_height="match_parent"
	    	android:padding="10dp"
	    	android:orientation="vertical" >
	        <TextView
	            android:id="@+id/id_title_eventos_adapter_item"
	        	android:layout_width="match_parent"
	    		android:layout_height="wrap_content"
	    		android:textColor="#FFFFFF"
	    		android:textSize="18dp"    
	    		android:layout_marginBottom="10dp"
	            android:text="Título" />
	        <TextView
	            android:id="@+id/id_subtitle_eventos_adapter_item"
	        	android:layout_width="match_parent"
	    		android:layout_height="wrap_content"
	    		android:textSize="16dp"
	    		android:textColor="#ffCC00"
	            android:text="Subtítulo" />
	    </LinearLayout>        
    </LinearLayout>
    
    <!-- Last Row -->
    <LinearLayout
        android:layout_width="match_parent"
    	android:layout_height="56dp"
    	android:orientation="horizontal"
    	android:layout_marginLeft="5dp"
    	android:layout_marginRight="10dp"
    	android:layout_marginBottom="5dp"
    	android:gravity="center"
    	android:background="@drawable/event_item_footer_background"
    	android:weightSum="5" >
        
		<ImageView
		    android:id="@+id/id_schedule_icon_eventos_adapter_item"
	        android:layout_width="24dp"
	        android:layout_height="24dp"
	        android:layout_weight="1"
	        android:src="@drawable/ic_schedule" />
        <TextView
            android:id="@+id/id_date_eventos_adapter_item"
        	android:layout_width="68dp"
    		android:layout_height="wrap_content"
    		android:padding="3dp"
    		android:layout_weight="1"
    		android:textColor="#7F7F94"
    		android:textSize="16dp"
            android:text="27 e 28 mar" />
		<ImageView
		    android:id="@+id/id_checkin_icon_eventos_adapter_item"
	        android:layout_width="24dp"
	        android:layout_height="24dp"
	        android:layout_weight="1"
	        android:src="@drawable/ic_checkin" />
        <TextView
            android:id="@+id/id_address_eventos_adapter_item"
        	android:layout_width="100dp"
    		android:layout_height="wrap_content"
    		android:padding="3dp"
    		android:textColor="#7F7F94"
    		android:layout_weight="1"    
    		android:textSize="16dp"
            android:text="WTC Torre Empresarial" />
        <ImageView
	        android:layout_width="1dp"
	        android:layout_height="match_parent"
	        android:layout_margin="3dp"
	        android:background="#7F7F94" />
		<ImageView
		    android:id="@+id/id_plus_button_eventos_adapter_item"
	        android:layout_width="24dp"
	        android:layout_height="24dp"
	        android:layout_weight="1"
	        android:src="@drawable/ic_plus" />
    </LinearLayout>
</LinearLayout>