<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/id_drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/hsm_color_black" >

    <!-- The main content view -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center" >

                <!-- First Row -->
                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scrollbars="none" >

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/home_activity_big_images_height"
                        android:orientation="horizontal" >

                        <ImageView
                            android:id="@+id/id_events_image_button"
                            android:layout_width="@dimen/home_activity_big_images_width"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="-5dp" />
                        <ImageView
                            android:id="@+id/id_banner_home_image_button"
                            android:layout_width="@dimen/home_activity_big_images_width"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="-5dp"
                            android:background="@color/hsm_color_black" />
                    </LinearLayout>
                </HorizontalScrollView>
		        
                <!-- Grid View -->
                <GridView
				    android:id="@+id/id_grid_view"
				    android:layout_width="match_parent"
				    android:layout_height="@dimen/home_activity_grid_view_height"
				    android:gravity="center"
				    android:numColumns="2"
				    android:stretchMode="columnWidth" />
				
				<!-- Footer -->
		        <ImageView
		            android:id="@+id/id_footer_image_view"
		            android:layout_width="match_parent"
		            android:layout_height="wrap_content"
		            android:layout_marginTop="@dimen/home_activity_footer_margin"
		            android:background="@color/hsm_color_black" />
            </LinearLayout>
        </ScrollView>
    </LinearLayout>

    <!-- The navigation drawer -->
    <ListView
        android:id="@+id/id_left_drawer"
        android:layout_width="240dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="@color/hsm_color_gray_dark"
        android:choiceMode="singleChoice"
        android:divider="@android:color/transparent"
        android:dividerHeight="0dp" />
</android.support.v4.widget.DrawerLayout>