<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/hsm_background"
    android:orientation="vertical"
    tools:context="br.com.ikomm.apps.HSM.RevistaActivity$PlaceholderFragment" >
    
    <LinearLayout 
        android:id="@+id/llRevistasClick"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="#2f2f3d"
        android:clickable="true"
        android:orientation="horizontal">
        
        <LinearLayout 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            
            <ImageView 
                android:id="@+id/magazinePicture"
	            android:layout_width="150dp"
	            android:layout_height="150dp"
	            android:layout_marginTop="20dp"
	            android:layout_marginBottom="10dp"
	            android:adjustViewBounds="true"
	            android:src="@drawable/hsm_placeholder_small"/>
            
            <TextView
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:textColor="#7f7f94"
		        android:layout_marginLeft="45dp"
		        android:layout_marginBottom="10dp"
		        android:textSize="9dp"
		        android:text="ASSINE AGORA" />
        </LinearLayout>
        
        <LinearLayout 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            
            <TextView
                android:id="@+id/magazineName"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_marginTop="50dp"
		        android:textSize="17dp"
		        android:textStyle="bold"
		        android:textColor="#53bd7a" />
            
            <TextView
                android:id="@+id/magazineDescription"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:textColor="#7f7f94"
		        android:textSize="9dp" />
        </LinearLayout>
        
    </LinearLayout>

    <ListView 
        android:id="@+id/lvRevistas"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></ListView>

</LinearLayout>
